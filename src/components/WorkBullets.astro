---
    const workCenters = [
        {
            name: 'Empathy.co',
            src: 'media/empathy.png'
        }
    ]
---

<div>
    <h4 class="text-accent text-2xl font-bold mt-12 mb-6">Work Experience</h4>
    <div class="flex flex-row items-center gap-4">
        {workCenters.map((center) => (
            <div class="flex justify-center items-center bg-customblack dark:bg-customwhite rounded-full w-24 h-24">
                <img class="p-4" src={center.src} alt={center.name} />
            </div>
            <span class="text-4xl font-bold">--></span>
        ))}
    </div>
</div>