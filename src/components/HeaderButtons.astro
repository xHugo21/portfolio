---
import { Github, Linkedin } from 'lucide-react'

const links = [
  {
    href: 'https://github.com/xHugo21',
    label: 'GitHub',
    Icon: Github,
  },
  {
    href: 'https://www.linkedin.com/in/hugogarciacuesta',
    label: 'LinkedIn',
    Icon: Linkedin,
  },
]
---

<div class="flex flex-row gap-6">
  {
    links.map(({ href, label, Icon }) => (
      <a
        class="w-6 duration-500 transition-transform hover:scale-105"
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={label}
      >
        <Icon />
      </a>
    ))
  }
</div>
