---
const pages: Array<any> = [
  {
    title: "Who am I?",
    url: "/about",
  },
  { title: "Education", url: "/education" },
  { title: "Work Experience", url: "/work-experience" },
  { title: "Stack", url: "/stack" },
  { title: "Projects", url: "/projects" },
];
---

<div
  class="grid grid-cols-1 gap-y-8 gap-x-10 sm:grid-cols-2 md:grid-cols-3 w-max"
>
  {
    pages.map((page) => (
      <a
        class="flex justify-center p-4 bg-secondary rounded-lg drop-shadow-lg transform hover:scale-110 duration-500"
        href={page.url}
      >
        <h3 class="text-lg font-semibold text-quaternary">{page.title}</h3>
      </a>
    ))
  }
</div>