---
const pages: Array<any> = [
  {
    title: "Who am I?",
    url: "/about"
  },
  { title: "Education", url: "/education"},
  { title: "Work Experience", url: "/work-experience"},
  { title: "Stack", url: "/stack"},
  { title: "Projects", url: "/projects"},
];
---

<div
  class="flex flex-col gap-8"
>
  {
    pages.map((page) => (
      <a
        class="flex flex-row gap-4 justify-center p-3 bg-primary rounded-lg drop-shadow-xl transform hover:scale-110 duration-500"
        href={page.url}
      >
        <h3 class="text-lg font-regular text-colorbg">{page.title}</h3>
      </a>
    ))
  }
</div>